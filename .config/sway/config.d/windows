#
# Window rules and floating window configurations
#
# vim: ft = swayconfig:

# Floating terminal windows for status bar launchers
for_window [app_id="floating-terminal"] floating enable
for_window [app_id="floating-terminal"] resize set width 80 ppt height 80 ppt
for_window [app_id="floating-terminal"] move position center

# Floating window for pavucontrol (volume control)
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="pavucontrol"] resize set width 70 ppt height 60 ppt
for_window [app_id="pavucontrol"] move position center
